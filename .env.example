# AI Provider Configuration
AI_PROVIDER=ollama  # ollama or openai
AI_MODEL=  # optional: cesarchamal/qa-expert for ollama, gpt-4o-mini for openai

# Dataset Configuration
OVERWRITE_DATASET=false  # true to overwrite existing dataset without prompt

# Model Training Configuration
TRAIN_MODEL=false  # true to automatically train model after dataset creation
FINETUNE_METHOD=full  # full or lora fine-tuning method
BASE_MODEL=microsoft/DialoGPT-small  # base model for fine-tuning

# OpenAI Configuration
OPENAI_API_KEY=your_openai_key_here

# Ollama Configuration
OLLAMA_API_BASE_URL=http://localhost:11434/api
OLLAMA_HOST=http://localhost:11434

# Hugging Face Hub Token (optional - for uploading datasets)
HUGGING_FACE_HUB_TOKEN=your_token_here